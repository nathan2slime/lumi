{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["^generate"]
    },
    "seed": {
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:cov": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^generate"]
    }
  }
}
